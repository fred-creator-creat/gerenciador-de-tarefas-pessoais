<?xml version="1.0" encoding="UTF-8"?>
<web-app xmlns="http://java.sun.com/xml/ns/javaee"
         xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://java.sun.com/xml/ns/javaee
         http://java.sun.com/xml/ns/javaee/web-app_3_0.xsd"
         version="3.0">

    <!-- Definindo o Servlet -->
    <servlet>
        <servlet-name>TarefaServlet</servlet-name>
        <servlet-class>com.gerenciador.tarefas.TarefaServlet</servlet-class>
    </servlet>

    <!-- Mapeando o Servlet para o caminho raiz do projeto -->
    <servlet-mapping>
        <servlet-name>TarefaServlet</servlet-name>
        <url-pattern>/</url-pattern> <!-- Acessando o servlet via raiz do projeto -->
    </servlet-mapping>

    <!-- Definindo o arquivo de boas-vindas -->
    <welcome-file-list>
        <welcome-file>index.jsp</welcome-file> <!-- PÃ¡gina inicial do projeto -->
    </welcome-file-list>

</web-app>